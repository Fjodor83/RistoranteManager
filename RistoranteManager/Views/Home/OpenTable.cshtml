@model RistoranteManager.Models.ViewModels.OpenTableViewModel
@{
    ViewData["Title"] = $"Apri Tavolo {Model.TableNumber}";
}

<div class="container">
    <h1>Apri Tavolo @Model.TableNumber</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="OpenTable" method="post">
                        <input type="hidden" asp-for="TableId" />
                        <input type="hidden" asp-for="TableNumber" />

                        <div class="form-group mb-3">
                            <label asp-for="Covers" class="form-label">Numero di coperti</label>
                            <input asp-for="Covers" class="form-control" />
                            <span asp-validation-for="Covers" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.TableId" class="btn btn-secondary">Annulla</a>
                            <button type="submit" class="btn btn-success">Apri tavolo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}